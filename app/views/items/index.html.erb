<p id="notice"><%= notice %></p>

<h1>Items</h1>



<br>
<div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Description</th>
              <th>Price</th>
              <th>Quantity</th>
              <th colspan="3">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
              <tr>
                <td><%= item.id %></td>
                <td><%= item.item_name %></td>
                <td><%= item.description %></td>
                <td><%= item.price %></td>
                <td><%= item.quantity %></td>
                <td><button type="button" class="btn btn-info"><%= link_to 'Show', item %></button></td>
                <td><button type="button" class="btn btn-warning"><%= link_to 'Edit', edit_item_path(item) %></button></td>
                <td><button type="button" class="btn btn-danger"><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

